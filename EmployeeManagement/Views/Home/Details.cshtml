@model HomeDetailsViewModel

@{
    ViewBag.Title = "Employee Details";
}


<style>
    body {
        background-color: #fafafa;
    }

    .sidenav {
        height: 100%;
        width: 200px;
        position: fixed;
        z-index: 1;
        top: 0;
        left: 0;
        background-color: #ffffff;
        overflow-x: hidden;
        padding: 20px;
        border-top: #e6e6e6 2px solid;
        border-right: #e6e6e6 2px solid;
        margin-top: 56px;
    }

        .sidenav a {
            padding: 2px 0px 2px 0px;
            text-decoration: none;
            font-size: 15px;
            color: black;
            display: block;
        }

            .sidenav a.active {
                /* Add a green color to the "active/current" link */
                color: #35b3a2;
            }

            .sidenav a:hover {
                color: #0094ff;
            }

    .main {
        margin-left: 100px; /* Same as the width of the sidenav */
    }

    .us {
        margin-left: 800px;
        margin-top: 10px;
    }

    .ad {
        padding: 5px 15px 5px 15px;
        color: #35b3a2;
        border: 1px solid #35b3a2;
    }

    .box4 {
        background: #ffffff;
        width: 800px;
        padding: 20px;
        border-radius: 2px;
        border: #e6e6e6 1px solid;
    }

    .gene {
        color: #35b3a2;
        border-bottom: #35b3a2 3px solid;
        padding: 10px;
    }
</style>




<div class="sidenav">
    <p>User Management</p>
    <hr>
    <a asp-controller="administration" asp-action="ListUsers">Users</a>
    <a class="active" asp-controller="application" asp-action="users">Emloyees</a>
    <a asp-controller="application" asp-action="settings">Settings</a>
</div>


<div class="main">

    <div class="row">
        <h3>Users</h3>
        <p class="us">
            <a asp-controller="application" asp-action="users" class="ad">Cancel</a>
        </p>
    </div>
    <hr />

    <div class="box4">
        <div class="row justify-content-center m-3">
            <div class="col-sm-8">
                <div class="card">
                    <div class="card-header">
                        <h1>@Model.Employee.Name</h1>
                    </div>

                    <div class="card-body text-center">

                        @*<img class="card-img-top" src="~/images/a.jpg" asp-append-version="true" />*@

                        <h4>Employee ID : @Model.Employee.Id</h4>
                        <h4>Email : @Model.Employee.Email</h4>
                        <h4>Department : @Model.Employee.Department</h4>
                        <h4>Invited On : @Model.Employee.InvitedOn</h4>
                        <h4>Last Active : @Model.Employee.LastActive</h4>
                        <h4>Status : @Model.Employee.Status</h4>

                    </div>
                    <div class="card-footer text-center">
                        <a asp-controller="application" asp-action="users" class="mbtn">Back</a>
                        <a asp-controller="home" asp-action="edit" asp-route-id="@Model.Employee.Id"
                           class="mbtn">Edit</a>
                        <a href="#" class="btn btn-danger">Delete</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @section Scripts {
        <script src="~/js/CustomScript.js"></script>
    }
</div>