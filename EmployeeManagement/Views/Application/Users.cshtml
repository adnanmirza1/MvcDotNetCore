@model IEnumerable<Employee>


@{
    ViewBag.Title = "Users Settings";
}

<style>
    body {
        background-color: #fafafa;
    }

    .sidenav {
        height: 100%;
        width: 200px;
        position: fixed;
        z-index: 1;
        top: 0;
        left: 0;
        background-color: #ffffff;
        overflow-x: hidden;
        padding: 20px;
        border-top: #e6e6e6 2px solid;
        border-right: #e6e6e6 2px solid;
        margin-top: 56px;
    }

        .sidenav a {
            padding: 2px 0px 2px 0px;
            text-decoration: none;
            font-size: 15px;
            color: black;
            display: block;
        }

            .sidenav a.active {
                /* Add a green color to the "active/current" link */
                color: #35b3a2;
            }

            .sidenav a:hover {
                color: #0094ff;
            }

    .main {
        margin-left: 100px; /* Same as the width of the sidenav */
    }

    .us {
        margin-left: 800px;
        margin-top: 10px;
    }

    .ad {
        padding: 5px 15px 5px 15px;
        color: #35b3a2;
        border: 1px solid #35b3a2;
    }
</style>




<div class="sidenav">
    <p>User Management</p>
    <hr>
    <a asp-controller="administration" asp-action="ListUsers" >Users</a>
    <a class="active" asp-controller="application" asp-action="users">Emloyees</a>
    <a asp-controller="application" asp-action="settings">Settings</a>
</div>

<div class="main">
    
        <div class="row">
            <h3>Users</h3>
            <p class="us">
                <a asp-controller="home" asp-action="create" class="ad">Add User</a>
            </p>
        </div>
        <hr />
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Name
                    </th>
                    <th>
                        User ID
                    </th>
                    <th>
                        Role
                    </th>
                    <th>
                        InvitedOn
                    </th>
                    <th>
                        LastActive
                    </th>
                    <th>
                        Status
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var Employee in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => Employee.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => Employee.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => Employee.Department)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => Employee.InvitedOn)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => Employee.LastActive)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => Employee.Status)
                        </td>
                        <td>
                            <a asp-controller="home" asp-action="details" asp-route-id="@Employee.Id">view</a>
                            <a asp-controller="home" asp-action="edit" asp-route-id="@Employee.Id">edit</a>
                            <a href="#" >delete</a>
                            
                            @*<form method="post" asp-controller="application" asp-action="DeleteUser2" asp-route-id="@Employee.Id">
                                <button type="submit" class="btn btn-danger"
                                        onclick="return confirm('Are you sure you want to delete user : @Employee.Name')">
                                    Delete
                                </button>
                            </form>*@
                        </td>
                    </tr>
                }
            </tbody>
        </table>


